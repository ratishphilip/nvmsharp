    <sys:Double x:Key="ExpanderLargeFontSize">18</sys:Double>

    <Style x:Key="Expander.Dark.TextBlockStyle"
           TargetType="TextBlock">
        <Setter Property="SnapsToDevicePixels"
                Value="True"></Setter>
        <Setter Property="Background"
                Value="Transparent"></Setter>
        <Setter Property="Foreground"
                Value="Black"></Setter>
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Center" />
        <Setter Property="FontFamily"
                Value="Segoe MDL2 Assets" />
        <Setter Property="FontWeight"
                Value="Light"></Setter>
        <Setter Property="FontSize"
                Value="{StaticResource ExpanderLargeFontSize}" />
        <!--<Setter Property="TextOptions.TextFormattingMode"
                Value="Display" />-->
    </Style>

    <Style x:Key="ExpanderRightHeaderStyle"
           TargetType="{x:Type ToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border Padding="{TemplateBinding Padding}">
                        <Grid x:Name="RootGrid"
                              Background="{StaticResource Expander.Dark.Static.Background}"
                              SnapsToDevicePixels="True"
                              Height="48">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.LayoutTransform>
                                <TransformGroup>
                                    <TransformGroup.Children>
                                        <TransformCollection>
                                            <RotateTransform Angle="-90" />
                                        </TransformCollection>
                                    </TransformGroup.Children>
                                </TransformGroup>
                            </Grid.LayoutTransform>
                            <Border Background="#665E6971"></Border>
                            <TextBlock x:Name="textContent"
                                       Focusable="False"
                                       Text="&#xE26B;"
                                       Style="{StaticResource Expander.Dark.TextBlockStyle}"
                                       Margin="{TemplateBinding Padding}" />
                            <ContentPresenter Grid.Column="1"
                                              HorizontalAlignment="Left"
                                              Margin="4,0,0,0"
                                              RecognizesAccessKey="True"
                                              SnapsToDevicePixels="True"
                                              VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked"
                                 Value="true">
                            <Setter TargetName="textContent"
                                    Property="Text"
                                    Value="&#xE228;" />
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="true">
                            <Setter TargetName="RootGrid"
                                    Property="Background"
                                    Value="{StaticResource Expander.Dark.MouseOver.Background}"></Setter>
                            <Setter TargetName="textContent"
                                    Property="Foreground"
                                    Value="{StaticResource Expander.Dark.Static.Foreground}"></Setter>
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="true">
                            <Setter TargetName="RootGrid"
                                    Property="Background"
                                    Value="{StaticResource Expander.Dark.Pressed.Background}"></Setter>
                            <Setter TargetName="textContent"
                                    Property="Foreground"
                                    Value="{StaticResource Expander.Dark.Pressed.Foreground}"></Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="false">
                            <Setter TargetName="RootGrid"
                                    Property="Background"
                                    Value="{StaticResource Expander.Dark.Disabled.Background}"></Setter>
                            <Setter TargetName="textContent"
                                    Property="Foreground"
                                    Value="{StaticResource Expander.Dark.Disabled.Foreground}"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

